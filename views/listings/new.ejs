<% layout("/layouts/boilerplate") %>

<body>
  <br />
  <h2 class="offset-2">Create a New Listing</h2>

  <div class="row mt-3">
    <div class="col-8 offset-2">
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label"><b>Title :</b> </label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add a Catchy Title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid Title.</div>
        </div>
        <br />
        <div>
          <label for="description" class="form-label"
            ><b>Description :</b>
          </label>
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid Description.</div>
        </div>
        <br />
        <div>
          <label for="image" class="form-label"><b>Upload Image : </b></label>
          <input
            type="file"
            name="listing[image]"
            placeholder="Enter image URL/link"
            class="form-control"
            required
          />
        </div>
        <br />
        <div class="row">
          <div class="col-md-4">
            <label for="price" class="form-label"><b>Price : </b></label>
            <input
              type="number"
              name="listing[price]"
              placeholder="1200"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid Price.</div>
          </div>
          <br />
          <div class="col-md-8">
            <label for="country" class="form-label"><b>Country :</b> </label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid Country.</div>
          </div>
        </div>
        <br />
        <div>
          <label for="location" class="form-label"><b>Location : </b></label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Jaipur , Rajasthan"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid Location.</div>
        </div>
        <br />

        <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
